<WidgetsExample>:
    cols: 3
    ToggleButton:
        text: "Off"
        size_hint: None, 1
        width: "100dp"
        on_state: root.on_toggle_button_state(self)
    Button:
        text: "Click Me"
        on_press: root.on_button_click()
        disabled: not root.enabled
    Label:
        text: root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: 1, .5, 1, 1
    Switch:
        id: switch
        on_active: root.on_switch_active(self)
        active: True
        size_hint: None, 1
        width: "100dp"
    Slider:
        id: slider
        disabled: not switch.active
        orientation: "vertical"
        min: 0
        max: 100
        value: 23
        on_value: root.on_slider_value(self)
    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(slider.value))
        ProgressBar:
            max: 100
            value: slider.value
    TextInput:
        id: text_inp
        size_hint: None, 1
        width: "100dp"
        text: "Text Here"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: root.text_input_str


